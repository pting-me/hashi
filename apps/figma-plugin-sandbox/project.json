{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/figma-plugin-sandbox/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/figma-plugin-sandbox",
        "command": "esbuild apps/figma-plugin-sandbox/src/main.ts --outfile=../../dist/figma-plugin/main.js"
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "figma-plugin-sandbox:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "figma-plugin-sandbox:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/figma-plugin-sandbox/**/*.ts"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/figma-plugin-sandbox",
        "command": "vitest --run"
      }
    }
  },
  "tags": []
}
